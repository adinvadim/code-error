{
  "name": "tiny-code-error",
  "version": "0.1.0",
  "description": "Simple CodeError JS class (zero deps)",
  "keywords": [
    "code error",
    "code-error"
  ],
  "repository": "https://github.com/adinvadim/code-error",
  "license": "MIT",
  "author": "adinvadim",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs",
    "types": "./dist/index.d.ts"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll --env.NODE_ENV=production --minify --sourcemap",
    "clean": "rimraf dist",
    "test": "vitest --run",
    "test:dev": "vitest --ui",
    "test:tsd": "tsd",
    "typecheck": "tsc --noEmit",
    "watch": "pkgroll --watch",
    "release": "npm run test &&  changelogen --release && npm publish && git push --follow-tags"
  },
  "devDependencies": {
    "@skypack/package-check": "0.2.2",
    "@vitest/ui": "0.34.7",
    "changelogen": "^0.5.5",
    "pkgroll": "2.0.2",
    "rimraf": "5.0.5",
    "tsd": "0.31.0",
    "tsx": "4.9.3",
    "typescript": "5.4.5",
    "vite": "5.2.11",
    "vitest": "0.34.6"
  },
  "packageManager": "yarn@1.22.22",
  "tsd": {
    "directory": "tests"
  }
}
